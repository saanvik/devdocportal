!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{'http-equiv' => 'Content-Type', :content =>"text/html; charset=UTF-8"}        
      %title
        = @topictitle.to_s.strip.length == 0 ? "#{t.title.main}" : "#{@topictitle}"
      %link{:rel => "stylesheet",
        :type => "text/css",
        :href => "/css/ui.dynatree.css"}
      %link{:rel => "stylesheet",
        :type => "text/css",
        :href => "/css/redmond/jquery-ui-1.8.18.custom.css"}
      %link{:rel => "stylesheet",
        :type => "text/css",
        :media => "all",
        :href => "/oocss/oocss.css"}
      %script{:type => "text/javascript",
            :src => "/js/jquery-1.7.1.min.js"}
      %script{:type => "text/javascript",
              :src => "/js/jquery.tablesorter.min.js"}
      %script{:type => "text/javascript",
              :src => "/js/jquery-ui-1.8.18.custom.min.js"}
      %script{:type => "text/javascript",
              :src => "/js/jquery.cookie.js"}
      %script{:type => "text/javascript",
              :src => "/js/jquery.dynatree.min.js"}
      %script{:type => "text/javascript",
              :src => "/js/jquery.uitablefilter.js"}

      :javascript
        $(document).ready(function() 
        { 
         $(".sort_table").tablesorter({cssAsc: "ascending", cssDesc: "descending"});
        });

  %body
    %div{:class => "callout wizardBg mam"}
      %div{:class => "inner"}
        %div{:class => "bd"}
          %div{:style => "float: left"}
            %a{:class=>"img pts",
               :href=>"/dbcom/en-us/dbcom_index.htm"}
              %img{:alt=> t.layout.logo.alt,
                   :src=> t.layout.logo.url,
                   :width => "100px",
                   :height => "70px"}
            %a{:class=>"img techlib",
               :href=>"/dbcom/en-us/dbcom_index.htm"}
              %img{:src => t.layout.logo_text.url,
                   :alt => t.layout.logo_text.alt,
                   :width => "270px",
                   :height => "43px",
                   :class => "pbs"}
              %span{:class => "h2 mls techlib",
                    :style => "color:#FFFFFF"}
                = t.title.main
          %div{:class => "end mtl mrl"}
            %form{:id =>"searchForm",
                  :action => " ",
                  :method => "post"}
              %fieldset
                %div{:class=>"input"}
                  %input{:type=>"text",
                         :id=>"s",
                         :name=>"s",
                         :title=>t.search.placeholder,
                         :placeholder=>t.search.placeholder}
                %input{:type=>"submit",
                       :value=>"",
                       :id=>"searchSubmit"}
  %div{:class => "page liquid body mal"}
    %div{:class => "content mal"}
      =yield
 
    %div{:class => "footer"}
      %p{:style => "text-align: center"}
        = t.layout.copyright
